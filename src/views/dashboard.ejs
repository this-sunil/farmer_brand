}

/* ===== About Section ===== */
.about-me {
  text-align: center;
  padding: 60px 20px;
}

.about-me .profile img {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid #0d6efd;
  margin-bottom: 20px;
}

.about-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 20px;
  color: #0d6efd;
}

.about-description {
  max-width: 700px;
  margin: 0 auto 15px;
  font-size: 1rem;
}

.button-section {
  margin-top: 20px;
}

.button-section .btn {
  text-decoration: none;
  padding: 10px 20px;
  border-radius: 5px;
  margin: 5px;
  display: inline-block;
  font-weight: 600;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.button-section .btn.github { background: #333; color: #fff; }
.button-section .btn.linkedin { background: #0077b5; color: #fff; }
.button-section .btn.phone { background: #0d6efd; color: #fff; }

.button-section .btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.2);
}

/* ===== Section Titles ===== */
.section-title {
  font-size: 1.8rem;
  color: #0d6efd;
  margin-bottom: 20px;
  text-align: center;
  position: relative;
}

.section-title::after {
  content: '';
  width: 60px;
  height: 3px;
  background: #0d6efd;
  display: block;
  margin: 8px auto 0;
  border-radius: 2px;
}

/* ===== Experience Cards ===== */
.experience-card {
  background: #fff;
  margin: 20px auto;
  padding: 25px;
  border-radius: 10px;
  max-width: 900px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.experience-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.15);
}

.experience-card h3 {
  color: #0d6efd;
  margin-bottom: 5px;
}

.experience-card .company,
.experience-card .duration {
  font-style: italic;
  color: #555;
  margin-bottom: 10px;
}

.experience-card ul {
  list-style: disc;
  padding-left: 20px;
}

/* ===== Skills Section ===== */
#skills {
  padding: 40px 20px;
}

.skill-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.skill-card {
  background: #fff;
  padding: 15px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.skill-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.15);
}

.skill-card img {
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}

/* ===== Education Section ===== */
.education-section {
  padding: 40px 20px;
  max-width: 900px;
  margin: 0 auto;
}

.edu-card {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 15px;
