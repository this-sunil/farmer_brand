/* ===== Navigation ===== */
nav.main-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 40px;
  background: #0d6efd;
  color: white;
  position: sticky;
  top: 0;
  z-index: 100;
}

nav .headline {
  font-size: 1.8rem;
  font-weight: 700;
}

nav ul {
  list-style: none;
  display: flex;
  gap: 20px;
}

nav ul li a {
