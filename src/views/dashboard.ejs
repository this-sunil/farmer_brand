  gap: 20px;
  margin-top: 20px;
}

.video-card {
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.video-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.15);
}

.video-card iframe {
  width: 100%;
  aspect-ratio: 16 / 9;
  border: none;
}

.card-content {
  padding: 10px;
  text-align: center;
}

.card-title {
  font-weight: 700;
  color: #0d6efd;
}

.card-description {
  font-size: 0.9rem;
  color: #555;
}
</style>
</head>
